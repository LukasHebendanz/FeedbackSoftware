            <CheckBox x:Name="UntenLinks2_01" Content="" Canvas.Left="204" Canvas.Top="321" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24"/>
            <CheckBox x:Name="ObenRechts2_01" Content="" Canvas.Left="368" Canvas.Top="254" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24"/>
            <CheckBox x:Name="UntenRechts1_01" Content="" Canvas.Left="363" Canvas.Top="321" HorizontalAlignment="Left" VerticalAlignment="Center" Width="24"/>
            <CheckBox x:Name="UntenRechts2_01" Content="" Canvas.Left="327" Canvas.Top="368" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24"/>
