<Page x:Class="FeedbackSoftware.Views.Pages.LoginLehrer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeedbackSoftware.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginLehrer">

    <Grid>
		<TextBox x:Name="tbxUsername" VerticalAlignment="Top" HorizontalAlignment="Center" 
		 Margin="150" Width="200" Height="30" Text="Username">
			<TextBox.Style>
				<Style TargetType="TextBox">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="TextBox">
								<Border CornerRadius="5" BorderBrush="Orange" BorderThickness="2" Background="LightGray">
								</Border>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</TextBox.Style>
		</TextBox>

		<PasswordBox x:Name="tbxPassword" VerticalAlignment="Top" HorizontalAlignment="Center" 
		 Margin="190" Width="200" Height="30">
			<PasswordBox.Style>
				<Style TargetType="PasswordBox">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="PasswordBox">
								<Border CornerRadius="5" BorderBrush="Orange" BorderThickness="2" Background="LightGray">
								</Border>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</PasswordBox.Style>
		</PasswordBox>

		<Button x:Name="btnLogin" VerticalAlignment="Top" HorizontalAlignment="Center" 
		Margin="0, 232, 0, 0" Width="100" Height="30" Content="Login">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="Button">
								<Border CornerRadius="5" BorderBrush="Orange" BorderThickness="2" Background="LightGray">
									<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
								</Border>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</Button.Style>
		</Button>
	</Grid>
</Page>
