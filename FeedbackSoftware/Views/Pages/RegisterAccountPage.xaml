<Page x:Class="FeedbackSoftware.Views.RegisterAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeedbackSoftware.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterAccountPage">

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Überschrift -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Account erstellen"
        FontSize="16"
        FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        
        <!-- Benutzername -->
        <TextBlock Text="Benutzername" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0" Foreground="Gray" IsHitTestVisible="False"
           Visibility="{Binding Text, ElementName=usernameTextBox}" />
        <TextBox Name="usernameTextBox" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" Padding="5" Height="30" Width="250" />
        

        <!-- Passwort -->
        <PasswordBox Grid.Row="2" Grid.Column="0" Margin="0,5" Padding="5" Height="30" Width="250"
                     ToolTip="Passwort eingeben"/>

        <!-- Passwort bestätigen -->
        <PasswordBox Grid.Row="3" Grid.Column="0" Margin="0,5" Padding="5" Height="30" Width="250"
                     ToolTip="Passwort erneut eingeben"/>

        <!-- Registrieren Button -->
        <Button Grid.Row="4" Grid.Column="0" Margin="0,10" Height="35" Content="Registrieren"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" />
    </Grid>
</Page>
