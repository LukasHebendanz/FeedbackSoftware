<Window x:Class="FeedbackSoftware.ZielscheibenFormular"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeedbackSoftware"
        mc:Ignorable="d"
        Title="ZielscheibenFormular" Height="450" Width="800">
    <Grid>
        <!-- Zielscheibe -->
        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="400">
            <!-- Kreise mit richtigem Ursprungspunkt -->
            <Ellipse Width="400" Height="400" Stroke="Black" StrokeThickness="2" Canvas.Left="0" Canvas.Top="0" />
            <Ellipse Width="320" Height="320" Stroke="Black" StrokeThickness="2" Canvas.Left="40" Canvas.Top="40" />
            <Ellipse Width="240" Height="240" Stroke="Black" StrokeThickness="2" Canvas.Left="80" Canvas.Top="80" />
            <Ellipse Width="160" Height="160" Stroke="Black" StrokeThickness="2" Canvas.Left="120" Canvas.Top="120" />
            <Ellipse Width="80" Height="80" Stroke="Black" StrokeThickness="2" Canvas.Left="160" Canvas.Top="160" />

            <!-- Linien (vertikal und horizontal) -->
            <Line X1="200" Y1="0" X2="200" Y2="400" Stroke="Black" StrokeThickness="2" />
            <Line X1="0" Y1="200" X2="400" Y2="200" Stroke="Black" StrokeThickness="2" />

            <!-- Diagonale Linien (verlängert) -->
            <Line X1="60" Y1="60" X2="340" Y2="340" Stroke="Black" StrokeThickness="2" />
            <Line X1="340" Y1="60" X2="60" Y2="340" Stroke="Black" StrokeThickness="2" />

            <!-- Texte -->
            <!--<TextBlock Text="Ich lerne im Unterricht viel." Canvas.Left="160" Canvas.Top="10" TextAlignment="Center" />
            <TextBlock Text="Die Lehrkraft hat ein großes Hintergrundwissen." Canvas.Left="230" Canvas.Top="160" TextAlignment="Center" Width="150" TextWrapping="Wrap" />
            <TextBlock Text="Die Lehrkraft sorgt für ein gutes Lernklima in der Klasse." Canvas.Left="230" Canvas.Top="330" TextAlignment="Center" Width="150" TextWrapping="Wrap" />
            <TextBlock Text="Die Notengebung ist fair und nachvollziehbar." Canvas.Left="120" Canvas.Top="450" TextAlignment="Center" Width="160" TextWrapping="Wrap" />
            <TextBlock Text="Ich konnte dem Unterricht immer gut folgen." Canvas.Left="-50" Canvas.Top="330" TextAlignment="Center" Width="150" TextWrapping="Wrap" />
            <TextBlock Text="Der Unterricht wird vielfältig gestdaltet." Canvas.Left="-50" Canvas.Top="160" TextAlignment="Center" Width="150" TextWrapping="Wrap" />-->

            <!-- Nummerierung der Ringe (nach rechts und unten verschoben) -->
            <TextBlock Text="1" Canvas.Left="375" Canvas.Top="185" TextAlignment="Left" />
            <TextBlock Text="2" Canvas.Left="335" Canvas.Top="185" TextAlignment="Left" />
            <TextBlock Text="3" Canvas.Left="295" Canvas.Top="185" TextAlignment="Left" />
            <TextBlock Text="4" Canvas.Left="255" Canvas.Top="185" TextAlignment="Left" />
            <TextBlock Text="5" Canvas.Left="215" Canvas.Top="185" TextAlignment="Left" />
        </Canvas>
    </Grid>
</Window>
