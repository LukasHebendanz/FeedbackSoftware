<Page x:Class="FeedbackSoftware.Views.Pages.LoginLehrer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeedbackSoftware.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginLehrer">

	<Grid VerticalAlignment="Center" Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Überschrift -->
			<RowDefinition Height="Auto"/>
			<!-- Benutzername -->
			<RowDefinition Height="Auto"/>
			<!-- Passwort -->
			<RowDefinition Height="Auto"/>
			<!-- Error Message -->
			<RowDefinition Height="Auto"/>
			<!-- Registrieren Button -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="Login Lehrer"
           FontSize="16" FontWeight="Bold"
           HorizontalAlignment="Center" Margin="0,0,0,10"/>
		
		<StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
			<TextBlock Text="Benutzername" Foreground="Gray" />
			<TextBox x:Name="tbxUsername" Margin="0,5,0,0" Padding="5" Height="30" Width="250" />
		</StackPanel>

		<StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
			<TextBlock Text="Passwort" Foreground="Gray" />
			<PasswordBox x:Name="tbxPassword" Margin="0,5,0,0" Padding="5" Height="30" Width="250"
                 ToolTip="Passwort eingeben"/>
		</StackPanel>

		<StackPanel Grid.Row="6" HorizontalAlignment="Center" Margin="0,20,0,40">
			<Button x:Name="ButtonRegister" Height="35" Content="Login" Width="120"
            HorizontalAlignment="Center" VerticalAlignment="Center" Click="Login_Click" />
		</StackPanel>
	</Grid>
</Page>
