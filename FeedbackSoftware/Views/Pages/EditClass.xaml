<Page x:Class="FeedbackSoftware.Views.Pages.EditClass"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeedbackSoftware.Views.Pages" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditClass">


    <Grid Margin="20">
        <!-- Definiere Zeilen für Überschrift, Felder und Button -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Überschrift -->
            <RowDefinition Height="Auto"/>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <!-- Jahrgangsstufe -->
            <RowDefinition Height="Auto"/>
            <!-- Schuljahr -->
            <RowDefinition Height="Auto"/>
            <!-- Abteilung -->
            <RowDefinition Height="Auto"/>
            <!-- Fach -->
            <RowDefinition Height="*"/>
            <!-- Button oder weiterer Platz -->
        </Grid.RowDefinitions>
        <!-- Definiere zwei Spalten: links für Labels, rechts für Eingabefelder -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Überschrift -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Klasse erstellen"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Name -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Name:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Width="250"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,10"/>

        <!-- Jahrgangsstufe -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Jahrgangsstufe:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Width="250"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,10"/>

        <!-- Schuljahr -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Schuljahr:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Width="250"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,10"/>

        <!-- Abteilung -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Abteilung:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Width="250"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,10"/>

        <!-- Fach -->
        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Fach:" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="5" Grid.Column="1"
                 Width="250"
                 Height="30"
                 Padding="5"
                 Margin="0,0,0,10"/>

        <materialDesign:Snackbar x:Name="Error" MessageQueue="{Binding MessageQueue}" Grid.Row="5" Foreground="Red"/>

        <!-- Button zum Erstellen der Klasse -->
        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Bestätigen"
                Width="150"
                Height="35"
                Click="ButtonConfirm_Click"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"/>
    </Grid>


</Page>
