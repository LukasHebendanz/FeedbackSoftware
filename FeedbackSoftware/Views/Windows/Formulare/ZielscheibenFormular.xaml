            <CheckBox x:Name="ObenLinks1_02" Content="" Canvas.Left="148" Canvas.Top="232" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24"/>
            <CheckBox x:Name="ObenLinks2_03" Content="" Canvas.Left="204" Canvas.Top="98" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24"/>
