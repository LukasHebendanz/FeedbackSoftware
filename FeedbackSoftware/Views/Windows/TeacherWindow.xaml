<Window x:Class="FeedbackSoftware.Views.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeedbackSoftware.Views"
        mc:Ignorable="d"
        Title="TeacherWindow" Height="450" Width="800">
    <Grid Margin="20">
        <!-- Auswahlfeld -->
        <TextBlock Text="Auswahl der Formularart:" 
               Margin="0,0,0,10" 
               VerticalAlignment="Top"/>
        <ComboBox x:Name="formularComboBox" 
              Width="150" 
              Height="25" 
              Margin="50,20,0,0" 
              VerticalAlignment="Top">
            <ComboBoxItem>Formular 1</ComboBoxItem>
            <ComboBoxItem>Formular 2</ComboBoxItem>
            <ComboBoxItem>Formular 3</ComboBoxItem>
        </ComboBox>
        <Button Content="Template anzeigen" 
            Width="150" 
            Height="25"
            Margin="160,20,50,0"  
            VerticalAlignment="Top" 
            HorizontalAlignment="Left"/>

        <!-- Formular erstellen -->
        <Button Content="Formular erstellen" 
            Width="150" 
            Height="25" 
            Margin="50,60,0,0" 
            VerticalAlignment="Top"/>
        <TextBox x:Name="nameTextBox" 
             Width="150" 
             Height="25" 
             Margin="160,60,0,0" 
             VerticalAlignment="Top" 
             HorizontalAlignment="Left" 
             Text="Name"/>

        <!-- Schlüssel -->
        <TextBlock Text="Automatisch Erstellter Schlüssel:" 
               Margin="0,110,0,0" 
               VerticalAlignment="Top"/>
        <TextBlock Text="1234" 
               Margin="200,110,0,0" 
               VerticalAlignment="Top" 
               FontWeight="Bold"/>

        <Separator Margin="0,140,0,0" 
               VerticalAlignment="Top" 
               Height="1" 
               Background="Black"/>

        <!-- Formulare einsehen -->
        <ComboBox x:Name="einsehenComboBox" 
              Width="150" 
              Height="25" 
              Margin="50,150,0,0" 
              VerticalAlignment="Top">
            <ComboBoxItem>Name</ComboBoxItem>
        </ComboBox>
        <Button Content="Formulare einsehen" 
            Width="150" 
            Height="25" 
            Margin="160,150,0,0" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left"/>
    </Grid>
</Window>
