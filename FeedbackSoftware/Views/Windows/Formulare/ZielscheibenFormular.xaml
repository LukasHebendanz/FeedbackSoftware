<Window x:Class="FeedbackSoftware.ZielscheibenFormular"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeedbackSoftware"
        mc:Ignorable="d"
        Title="ZielscheibenFormular" MinHeight="750" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Zielscheibe -->
        <Canvas x:Name="nuckelan" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="600">
            <!-- Kreise mit richtigem Ursprungspunkt -->
            <Ellipse Width="600" Height="600" Stroke="Black" StrokeThickness="3" Canvas.Left="0" Canvas.Top="0" />
            <Ellipse Width="480" Height="480" Stroke="Black" StrokeThickness="3" Canvas.Left="60" Canvas.Top="60" />
            <Ellipse Width="360" Height="360" Stroke="Black" StrokeThickness="3" Canvas.Left="120" Canvas.Top="120" />
            <Ellipse Width="240" Height="240" Stroke="Black" StrokeThickness="3" Canvas.Left="180" Canvas.Top="180" />
            <Ellipse Width="120" Height="120" Stroke="Black" StrokeThickness="3" Canvas.Left="240" Canvas.Top="240" />

            <!-- Linien (vertikal und horizontal) -->
            <Line X1="300" Y1="0" X2="300" Y2="600" Stroke="Black" StrokeThickness="3" />
            <Line X1="0" Y1="300" X2="600" Y2="300" Stroke="Black" StrokeThickness="3" />

            <!-- Diagonale Linien (verlängert) -->
            <Line X1="90" Y1="90" X2="510" Y2="510" Stroke="Black" StrokeThickness="3" />
            <Line X1="510" Y1="90" X2="90" Y2="510" Stroke="Black" StrokeThickness="3" />

            <!-- Nummerierung der Ringe (nach rechts und unten verschoben) -->
            <TextBlock Text="1" Canvas.Left="562" Canvas.Top="280" TextAlignment="Left" FontSize="12"/>
            <TextBlock Text="2" Canvas.Left="502" Canvas.Top="280" TextAlignment="Left" FontSize="12"/>
            <TextBlock Text="3" Canvas.Left="442" Canvas.Top="280" TextAlignment="Left" FontSize="12"/>
            <TextBlock Text="4" Canvas.Left="382" Canvas.Top="280" TextAlignment="Left" FontSize="12"/>
            <TextBlock Text="5" Canvas.Left="322" Canvas.Top="280" TextAlignment="Left" FontSize="12"/>

            <!-- Checkboxen -->
