            <CheckBox x:Name="ObenLinks2_01" Content="" Canvas.Left="255" Canvas.Top="210" HorizontalAlignment="Left" VerticalAlignment="Center" Width="24"/>
            <CheckBox x:Name="ObenRechts1_01" Content="" Canvas.Left="322" Canvas.Top="210" HorizontalAlignment="Left" VerticalAlignment="Center" Width="24"/>
